<div id="<%= dom_id customer %>">
  <p>
    <strong>Customer:</strong>
    <%= customer.customer_id %>
  </p>

  <p>
    <strong>Name:</strong>
    <%= customer.name %>
  </p>

  <p>
    <strong>Email:</strong>
    <%= customer.email %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= customer.address %>
  </p>

  <p>
    <strong>City:</strong>
    <%= customer.city %>
  </p>

  <p>
    <strong>Zipcode:</strong>
    <%= customer.zipcode %>
  </p>

  <p>
    <strong>State:</strong>
    <%= customer.state %>
  </p>

  <p>
    <strong>Phone:</strong>
    <%= customer.phone %>
  </p>

</div>
